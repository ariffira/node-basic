<h1> Add Employee Form</h1>
<form class="form-inline" action="/add/employee" method="POST">
  <div class="form-group">
    <label class="control-form">First-Name</label>
    <div class="col-md-4">
      <input type="text" class="form-control" name="firstName" placeholder="e.g: Md Ariful">
    </div>
  </div>
  <div class="form-group">
    <label class="control-form">Last-Name</label>
    <div class="col-md-4">
      <input type="text" class="form-control" name="lastName" placeholder="e.g: Islam">
    </div>
  </div>
  <div class="form-group">
    <label class="control-form">Middle-Name</label>
    <div class="col-md-4">
      <input type="text" class="form-control" name="middleName">
    </div>
  </div>
  <div class="form-group">
    <label class="control-form">Email-Address</label>
    <div class="col-md-4">
      <input type="email" class="form-control" name="email">
    </div>
  </div>
  <div class="form-group">
    <label class="control-form">Country Name</label>
    <div class="col-md-4">
      <input type="text" class="form-control" name="country">
    </div>
  </div>
  <div class="form-group">
    <label class="control-form">Country Code</label>
    <div class="col-md-4">
      <select name="country_code">
        <option value="de">DE</option>
        <option value="en">En</option>
        <option value="sy">Sy</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-form">Age</label>
    <div class="col-md-4">
      <input type="number" class="form-control" name="age">
    </div>
  </div>
  <div class="form-group">
      <label class="control-form">Your Favourite Movies</label>
      <div class="col-md-4">
         <input type="text" class="form-control" name="movie">
      </div>
  </div>
  <div class="form-group">
      <label class="control-form">Joining Date</label>
      <div class="col-md-4">
         <input type="date" class="form-control" name="joining_date">
      </div>
  </div>
  <div class="form-group">
      <label class="control-form">Spouse Name</label>
      <div class="col-md-4">
        <input type="text" class="form-control" name="spouse">
      </div>
  </div>
  <button type="submit" class="btn btn-primary">Add Employee</button>
</form>